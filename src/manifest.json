{
  "manifest_version": 3,
  "name": "Domain Inspector Plus",
  "version": "0.1.0",
  "description": "Instant domain and IP inspection tool",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "Domain Inspector Plus",
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
